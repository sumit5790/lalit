pipeline {
            agent any
                stages {
                 stage (build) {
	                    agent {
                                 docker {
                                    image '172.31.30.63:5000/maven'
				    registryUrl 'https://172.31.30.63:5000'
	                            registryCredentialsId 'private-docker'
	                            args '-v /root/.m2:/root/.m2'
                              }
                     }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
		
	       
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
		sh 'echo "singh" | docker login 172.31.30.63:5000 --username sumit --password-stdin'
		sh 'docker pull 172.31.30.63:5000/java8 '
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh 'mvn -version'
		sh 'echo "singh" > docker login  sumit@172.31.30.63:5000'
		
            }
        }
    }
			
			
			
			}
      
      
     stage(dockerfile) {
		       
		        agent { dockerfile true }
                      stages {
                        stage('Test') {
                                   steps {
                                           sh 'mvn --version'
                                        }
                                      }
                              }
		   
		         }
      }
      }
